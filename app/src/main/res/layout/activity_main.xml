<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <EditText
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/activity_main_sms_text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_main_tel_number"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="phone"
            android:text="@string/tel"
            android:ems="10"
            android:id="@+id/activity_main_tel_number" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/Send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_main_button_send" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_main_sms_text"
            app:layout_constraintEnd_toStartOf="@+id/activity_main_button_cancel"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="@string/Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_main_button_cancel"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_main_sms_text" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>